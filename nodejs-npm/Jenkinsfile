@Library('blackduck-logs-publisher') _

pipeline {
    agent { label 'mac-sh' }

    stages {
        stage("Build") {
            steps {
                script {
                    echo "JOB_NAME: ${env.JOB_NAME}"

                    dir('nodejs-npm') {
                        sh 'node --version'
                        sh 'npm --version'
                        sh 'npm install'
                    }
                }
            }
        }

        stage("blackduck-security-scan") {
            steps {
                script {
                    dir('nodejs-npm') {
                        def projectName = env.JOB_NAME.split('/')[0]
                        echo "DETECT_PROJECT_NAME will be set to: ${projectName}"

                        withEnv(["DETECT_PROJECT_NAME=${projectName}"]) {
                            security_scan blackducksca_scan_full: true, 
                                         blackducksca_waitForScan: true, 
                                         include_diagnostics: true, 
                                         mark_build_status: 'FAILURE', 
                                         product: 'blackducksca'
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            pushJenkinsLogsToGitHub([
                githubOrg: 'blackducksca-jenkins-samples',
                repoName: 'full-scan'
            ])
        }
    }
}


